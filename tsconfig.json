{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./scripts",
    "./test",
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
